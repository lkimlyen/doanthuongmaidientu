
@model IEnumerable<webanhnguyen.Models.tbl_Product>

@foreach (var category in ViewBag.Categories)
{
<div class="ty-mainbox-simple-container clearfix homepage-fresh-seafoods">
    <h2 class="ty-mainbox-simple-title">
    @category.TenLoaiSP
    </h2>
    <div class="ty-mainbox-simple-body">
        <div class="grid-list">
           
            @foreach (var product in Model)
            {
                if (product.IDLoaiSP == category.ID)
                {
                <div itemscope="" itemtype="http://schema.org/Product" style="display: none">
                    <meta itemprop="sku" content="COM5CAN">
                    <meta itemprop="name" content="@product.TenSP">
                    <meta itemprop="description" content="@product.MoTaCT">
                    <div itemprop="offers" itemscope="" itemtype="http://schema.org/Offer">
                        <link itemprop="availability" href="http://schema.org/OutOfStock" rel="t">
                        <meta itemprop="priceCurrency" content="VNĐ">
                        <meta itemprop="price" content="@product.GiaHienTai">
                    </div>
                </div>
                <div class="ty-column4">
                    <div class="ty-grid-list__item ty-quick-view-button__wrapper">
                        <div class="ty-grid-list__image">
                            <a href="@Url.Action("Details", "Home", new { id = product.alias })">
                                <img class="ty-pict" src="~/@product.UrlHinh" style="height: 286.25px; width: 286.25px" alt="@product.TenSP" title="">
                            </a>
                            @if (@product.KhuyenMai > 0)
                            {
                                <ul class="ty-discount-label cm-reload-103000392" id="discount_label_update_103000392">
                                    <li class="ty-discount-label__item" id="line_prc_discount_value_103000392"><span class="ty-discount-label__value" id="prc_discount_value_label_103000392">Giảm @product.KhuyenMai %</span></li>
                                    <!--discount_label_update_103000392-->
                                </ul>
                            }
                            <div class="product-hover">
                                <div class="product-shipping-free">
                                    <i class="fa fa-truck"></i> Miễn phí
                                </div>
                                <a href="@Url.Action("Details", "Home", new { id = product.alias })" class="product-view">Mua&nbsp;&nbsp;<i class="fa fa-arrow-circle-right"></i></a>
                            </div>
                        </div>
                        <div class="ty-grid-list__item-name">
                            <a href="@Url.Action("Details", "Home", new { id = product.alias })" class="product-title" title="@product.TenSP">@product.TenSP</a>
                        </div><div class="ty-grid-list__price ">
                            <span class="cm-reload-122000404" id="old_price_update_122000404">

                                @if (@product.KhuyenMai > 0)
                                {
                                    <span class="ty-list-price ty-nowrap" id="line_list_price_103000392"><span class="ty-strike"><span id="sec_list_price_103000392" class="ty-list-price ty-nowrap">@string.Format("{0:#,##0}", product.GiaCu) đ</span></span></span>
                                }



                                <!--old_price_update_122000404-->
                            </span>
                            <span class="cm-reload-122000404 ty-price-update" id="price_update_122000404">
                                <span class="ty-price" id="line_discounted_price_122000404"><span id="sec_discounted_price_122000404" class="ty-price-num">@string.Format("{0:#,##0}", product.GiaHienTai) đ</span></span>

                                <!--price_update_122000404-->
                            </span>
                        </div><div class="ty-grid-list__control"></div>
                    </div>
                </div>
                }
            }
        </div>
    </div>
</div>
}

    